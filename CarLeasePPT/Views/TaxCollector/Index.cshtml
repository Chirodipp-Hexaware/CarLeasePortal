@using CarLeasePPT.Helpers
@using CarLeasePPT.Utility
@{
    ViewBag.Title = Resources.TaxCollector_Index_Title;

    var aftoken = AntiForgeryTokenHelper.TokenHeaderValue();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink(Resources.Common_Dashboard_Link, "Index", "Home")</li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.TaxCollector_BreadCrumb</li>
    </ol>
</nav>
<div class="mb-3">
    @Html.ActionLink(Resources.TaxCollector_Index_Create_Link, "Create", "TaxCollector", null, new { @class = "btn btn-secondary" })
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <div class="form-check">
                <input id="show_deleted" class="form-check-input" name="show_expired" type="checkbox" value="true" aria-controls="person_table" aria-label="@Resources.TaxCollector_Index_ShowDeleted_DisplayName" />
                <label for="show_deleted" class="form-check-label">@Resources.TaxCollector_Index_ShowDeleted_DisplayName</label>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-condensed table-bordered" id="taxcollector_table">
        <thead>
            <tr>
                <th>@Resources.TaxCollector_Common_TaxCollectorName_TableHeader</th>
                <th>@Resources.TaxCollector_Common_StateAbbreviation_DisplayName</th>
                <th>@Resources.TaxCollector_Common_VendorCode_TableHeader</th>
                <th>@Resources.TaxCollector_Common_TaxAssessor_TableHeader</th>
                <th>@Resources.TaxCollector_Common_IsDeleted_TableHeader</th>
                <th>@Resources.Common_Actions_TableHeader</th>
            </tr>
        </thead>
    </table>
</div>
<div id="aft" data-token="@aftoken" aria-hidden="true" class="hidden"></div>

@section Scripts {
    @Scripts.Render("~/bundles/taxcollector")
}