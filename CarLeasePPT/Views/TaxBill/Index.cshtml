@using CarLeasePPT.Helpers
@using CarLeasePPT.Utility
@model CarLeasePPT.Models.TaxBillIndexViewModel
@{
    ViewBag.Title = Resources.TaxBill_Index_Title;
    var aftoken = AntiForgeryTokenHelper.TokenHeaderValue();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink(Resources.Common_Dashboard_Link, "Index", "Home")</li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.TaxBill_BreadCrumb</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Vin)
                            @Html.TextBoxFor(m => m.Vin, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.LeaseNumber)
                            @Html.TextBoxFor(m => m.LeaseNumber, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.TaxAccountNumber)
                            @Html.TextBoxFor(m => m.TaxAccountNumber, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.BillNumber)
                            @Html.TextBoxFor(m => m.BillNumber, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-lg-2">
                        <div class="form-group mb-0">
                            <input type="button" class="btn btn-block btn-sm btn-primary" value="Search" id="taxbill_search_table_run">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group mb-0">
                            <input type="button" class="btn btn-block btn-sm btn-secondary" value="Reset" id="taxbill_search_table_clear">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-condensed table-bordered compact dataTable_custom" id="bill_search_table">
                <thead>
                <tr>
                    <th>@Resources.TaxBill_Index_BillNumber_TableHeader</th>
                    <th>@Resources.TaxBill_Index_TaxAssessorState_TableHeader</th>
                    <th>@Resources.TaxBill_Index_TaxYear_TableHeader</th>
                    <th>@Resources.TaxBill_Index_CollectorAccountNumber_TableHeader</th>
                    <th>@Resources.TaxBill_Index_DueDate_TableHeader</th>
                    <th>@Resources.TaxBill_Index_DateComplete_TableHeader</th>
                    <th>@Resources.TaxBill_Index_TotalAmountOwed_TableHeader</th>
                    <th>@Resources.TaxBill_Index_IsComplete_TableHeader</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div id="aft" data-token="@aftoken" aria-hidden="true" class="hidden"></div>

@section Scripts {
    @Scripts.Render("~/bundles/taxbill")
}