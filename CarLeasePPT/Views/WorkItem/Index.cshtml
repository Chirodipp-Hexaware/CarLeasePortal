@using CarLeasePPT.Helpers
@using CarLeasePPT.Utility
@model CarLeasePPT.Models.WorkItemIndexViewModel
@{
    ViewBag.Title = Resources.WorkItem_Index_Title;
    var aftoken = AntiForgeryTokenHelper.TokenHeaderValue();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink(Resources.Common_Dashboard_Link, "Index", "Home")</li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.WorkItem_BreadCrumb</li>
    </ol>
</nav>
<div class="row">
    <div class="col-lg-12 mb-3">
        @Html.ActionLink(Resources.Common_WorkItem_Create_Link, "Create", null, new {@class = "btn btn-primary"})
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkItemTypeId, new {@class = ""})
                            @Html.DropDownListFor(m => m.WorkItemTypeId,
                                Model.WorkItemTypes,
                                null,
                                new {@class = "form-control form-control-sm"})
                            @Html.ValidationMessageFor(model => model.WorkItemTypeId, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkItemStatusId, new {@class = ""})
                            @Html.DropDownListFor(m => m.WorkItemStatusId,
                                Model.WorkItemStatuses,
                                null,
                                new {@class = "form-control form-control-sm"})
                            @Html.ValidationMessageFor(model => model.WorkItemStatusId, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PriorityLevel, new {@class = ""})
                            @Html.DropDownListFor(m => m.PriorityLevel,
                                Model.PriorityLevels,
                                null,
                                new {@class = "form-control form-control-sm"})
                            @Html.ValidationMessageFor(model => model.PriorityLevel, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.NoticeNumber)
                            @Html.TextBoxFor(m => m.NoticeNumber, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.TaxCollectorName)
                            @Html.TextBoxFor(m => m.TaxCollectorName, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Vin)
                            @Html.TextBoxFor(m => m.Vin, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.LeaseNumber)
                            @Html.TextBoxFor(m => m.LeaseNumber, new {@class = "form-control form-control-sm"})
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="col-lg-2">
                        <div class="form-group mb-0">
                            <input type="button" class="btn btn-block btn-sm btn-primary" value="Search" id="workitem_search_table_run">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group mb-0">
                            <input type="button" class="btn btn-block btn-sm btn-secondary" value="Reset" id="workitem_search_table_clear">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-condensed table-bordered compact dataTable_custom" id="workitem_search_table">
                <thead>
                <tr>
                    <th>Notice Number</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Jurisdiction</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


<div id="aft" data-token="@aftoken" aria-hidden="true" class="hidden"></div>

@section Scripts {
    @Scripts.Render("/Scripts/workitem_index.js")
}