@using CarLeasePPT.Utility
@{
    Layout = "~/Views/Shared/_LayoutAlternate.cshtml";
    ViewBag.Title = Resources.Account_SetPasswordSuccess_Title;
}

<div class="row">
    <div class="col-lg-6 offset-3">
        <div class="card border-success mb-3">
            <h5 class="card-header bg-success text-white text-center">@Resources.Account_SetPasswordSuccess_Title</h5>
            <div class="card-body">
                <p class="card-text">@Resources.Account_SetPasswordSuccess_Message</p>
                <p class="mb-0">@Html.ActionLink(string.Format(Resources.Common_ReturnTo_Link, Resources.Account_Login_Link), "Login", "Account", null, new {@class = "btn btn-secondary"})</p>
            </div>
        </div>
    </div>
</div>