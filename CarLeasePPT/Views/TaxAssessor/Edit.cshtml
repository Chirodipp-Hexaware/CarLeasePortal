@using CarLeasePPT.Utility
@model CarLeasePPT.Models.TaxAssessorEditViewModel

@{
    ViewBag.Title = Resources.TaxAssessor_Edit_Title;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink(Resources.Common_Dashboard_Link, "Index", "Home")</li>
        <li class="breadcrumb-item">@Html.ActionLink(Resources.TaxAssessor_BreadCrumb, "Index", "TaxAssessor")</li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.TaxAssessor_Edit_BreadCrumb</li>
    </ol>
</nav>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-3">
                <h5 class="card-header">@Resources.TaxAssessor_Common_Details_Heading</h5>
                <div class="card-body">
                    @Html.Partial("_ValidationSummary")
                    <div class="form-group">
                        @Html.LabelFor(model => model.StateAbbreviation, new {@class = "required"})
                        @Html.EditorFor(model => model.StateAbbreviation, new {htmlAttributes = new {@class = "form-control form-control-sm"}})
                        @Html.ValidationMessageFor(model => model.StateAbbreviation, "", new {@class = "text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaxAssessorName, new {@class = "required"})
                        @Html.EditorFor(model => model.TaxAssessorName, new {htmlAttributes = new {@class = "form-control form-control-sm"}})
                        @Html.ValidationMessageFor(model => model.TaxAssessorName, "", new {@class = "text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.County)
                        @Html.EditorFor(model => model.County, new {htmlAttributes = new {@class = "form-control form-control-sm"}})
                        @Html.ValidationMessageFor(model => model.County, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg">
            <div class="form-group">
                <input type="submit" value="@Resources.TaxAssessor_Edit_Submit_DisplayName" class="btn btn-primary"/>
                @Html.ActionLink(Resources.Common_CancelButton_DisplayName, "Index", null, new {@class = "btn btn-danger"})
            </div>
        </div>
    </div>
    @Html.HiddenFor(model => model.TaxAssessorId)
}